pipeline {
    agent { label 'master' }

    environment {
        GIT_REPO = 'https://github.com/hanisha555/Jenkinsandjava.git'
        AWS_REGION = 'us-east-1'   // ✅ ECR Public only supports us-east-1
        ECR_PUBLIC_REPO_URI = 'public.ecr.aws/k0c8q8z5/jenkinsecr'
        IMAGE_TAG = 'latest'
        IMAGE_URI = "${ECR_PUBLIC_REPO_URI}:${IMAGE_TAG}"
    }

    stages {
        stage('Clone Repository') {
            steps {
                git url: "${GIT_REPO}", branch: 'main'
            }
        }

        stage('Build Java App') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Docker Build') {
            steps {
                sh 'docker build -t ${IMAGE_URI} .'
            }
        }

        stage('Docker Login to ECR') {
            steps {
                withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-hanisha-ecr']]) {
                    sh '''
                        aws ecr-public get-login-password --region ${AWS_REGION} | docker login --username AWS --password-stdin public.ecr.aws
                    '''
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                sh 'docker push ${IMAGE_URI}'
            }
        }
    }

    post {
        success {
            echo "✅ Success! Docker image pushed to ECR."
        }
        failure {
            echo "❌ Pipeline failed. Check console output."
        }
    }
}
